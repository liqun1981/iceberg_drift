        sourceInfo
        {
            // box (0.1 0.8 -100) (0.4 100 100);
            box (-100 -100 0.405) (0.2 100 0.5);
            // box (0.2 0.2 0.2) (0.4 0.4 0.4);
        }
    }

    {
